# ============================================
# Decentralized Health Visit System
# Environment Configuration
# ============================================
# Copy this file to .env and fill in your values
# For production, ensure all secrets are secure!

# ============================================
# ENVIRONMENT
# ============================================
NODE_ENV=development
# Options: development, staging, production

# ============================================
# DATABASE (MongoDB)
# ============================================
MONGO_ROOT_USER=admin
MONGO_ROOT_PASSWORD=password123
MONGO_PORT=27017
# For production, use MongoDB Atlas:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/healthvisit

# ============================================
# BACKEND API
# ============================================
BACKEND_PORT=3001
JWT_SECRET=your-super-secret-jwt-key-min-32-characters
BCRYPT_ROUNDS=12
# Production should use 14 rounds

# ============================================
# DASHBOARD
# ============================================
DASHBOARD_PORT=3000
REACT_APP_API_URL=http://localhost:3001
REACT_APP_ENABLE_ANALYTICS=true

# ============================================
# FEEDBACK PORTAL
# ============================================
FEEDBACK_PORT=3002

# Twilio Configuration (for SMS OTP)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# ============================================
# BLOCKCHAIN
# ============================================
BLOCKCHAIN_PORT=8545
BLOCKCHAIN_RPC_URL=http://localhost:8545
CONTRACT_ADDRESS=
# Use Hardhat default private key for development only!
BLOCKCHAIN_PRIVATE_KEY=0xac0974bec39a17e36ba4a6b4d238ff944bacb478cbed5efcae784d7bf4f2ff80

# ============================================
# CORS
# ============================================
CORS_ORIGIN=http://localhost:3000

# ============================================
# PRODUCTION SETTINGS (uncomment for prod)
# ============================================
# NODE_ENV=production
# JWT_SECRET=use-a-very-long-random-string-here
# BCRYPT_ROUNDS=14
# CORS_ORIGIN=https://yourdomain.com
# REACT_APP_API_URL=https://api.yourdomain.com
